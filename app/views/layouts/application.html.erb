<!DOCTYPE html>
<html>
  <head>
    <title>CategoryPost</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="wrapper">
      <header>
        <ul>
          <% if current_user %>
            <li><%= link_to 'Posts', posts_path, class: current_page?(posts_path) || current_page?('/') ? 'active' : '' %></li>
            <li><a>Categories</a></li>
            <li><a>Hello, <%= current_user.email %></a></li>
            <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "Log in", new_session_path(resource_name), class: current_page?(new_user_session_path) ? 'active' : '' %></li>
            <li><%= link_to "Sign up", new_registration_path(resource_name), class: current_page?(new_user_registration_path) ? 'active' : '' %></li>
          <% end %>
        </ul>
      </header>
      <main>
        <!-- <p class="notice"><%= notice %></p> -->
        <!-- <p class="alert"><%= alert %></p> -->
        <%= yield %>
      </main>
    </div>
  </body>
</html>
