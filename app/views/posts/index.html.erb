<%= link_to 'Create New Post', new_post_path, class: 'create-new-post-link' %>
<div class="container">
  <ul>
    <% @posts.each do |post| %>
      <li>
        <%= link_to post.title, post %>
        <%= link_to 'Delete', post_path(post), method: :delete %>
      </li>
    <% end %>
  </ul>
</div>
